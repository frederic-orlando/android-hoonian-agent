<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthTextField" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="DarkHoonianButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
    </style>
    <style name="DarkHoonianSmallButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
    </style>
    <style name="CancelButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_red</item>
    </style>

    <style name="WideImage" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintDimensionRatio">16:9</item>
    </style>

    <style name="SquareImage" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="TitleLabel" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="CategoryButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="CommissionInfo" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_smlarge</item>
        <item name="android:background">@drawable/border_background_cyan</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_smed</item>
    </style>
    <style name="RowProfile" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_xmsmall</item>
    </style>
    <style name="RowPurchase" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    <style name="RowEditProfile" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="ButtonIcon" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_med</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/white</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ButtonPrevNext" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="ProjectInfo" parent="TextAppearance.AppCompat">
        <item name="android:drawablePadding">@dimen/padding_xxsmall</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ProfileLabel" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_xmsmall</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ProfileText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_smed</item>
    </style>

</resources>