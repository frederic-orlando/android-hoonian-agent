<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_smlarge"
    android:layout_marginBottom="@dimen/margin_med"
    android:background="@drawable/border_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameLbl"
            style="@style/TitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit : " />

            <TextView
                android:id="@+id/typeLbl"
                style="@style/SmallText"
                android:background="@color/dark_blue"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/padding_xsmall"
                android:paddingHorizontal="@dimen/margin_xmsmall"
                android:text="TextView" />
        </LinearLayout>
        <TextView
            android:id="@+id/callBtn"
            android:textSize="@dimen/text_s"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:drawableTint="@color/dark_blue"
            android:drawablePadding="@dimen/padding_xmsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/padding_smlarge"
            android:layout_marginTop="@dimen/margin_smed"
            android:text="Call" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/statusLbl"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_xmsmall"
            android:gravity="center"
            android:background="@color/cyan"
            android:textColor="@color/dark_blue"
            android:text="TextView" />

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commission" />

        <TextView
            android:id="@+id/commissionLbl"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>