<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_smmedium"
        android:background="@color/dark_blue"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/text_mls"
        android:text="Add Note" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_smlarge">

        <EditText
            android:id="@+id/notesTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:maxHeight="200dp"
            android:background="@drawable/border_background"
            android:inputType="textMultiLine"
            android:hint="Enter Notes"
            android:padding="@dimen/padding_xsmall"
            android:gravity="top"
            android:layout_marginTop="@dimen/margin_med"
            android:layout_marginBottom="@dimen/margin_med"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_xmsmall">
            <Button
                android:id="@+id/saveBtn"
                style="@style/DarkHoonianButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="save" />
            <Space
                android:layout_width="@dimen/size_8dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/cancelBtn"
                style="@style/DarkHoonianButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>